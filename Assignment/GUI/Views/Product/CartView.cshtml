


<div class="container">
    <h1>Cart Information</h1>

    <!-- Customer Information Section -->

   
    <!-- Orders Section -->
    <div class="row">
        <div class="col-md-12">
            <h2>Orders</h2>
            <table class="table">
                <thead>
                    <tr>
                     
                        <th>Image</th>
                        <th>Product ID</th>
                        <th>Unit Price</th>
                        <th>Quantity</th>
                     
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderDetail in Model)
                    {
                        <tr>
                            
                            <td>
                                <img width="60" height="60" src="https://i.pinimg.com/564x/81/6d/cc/816dcc925a14ec91bc2258b883090c93.jpg" class="card-img-top" alt="Product Image">
                            </td>
                            <td>@orderDetail.ProductId</td>
                            <td>@orderDetail.UnitPrice</td>
                            <td>@orderDetail.Quantity</td>
                  
                           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="container">
        <h1 class="mt-4">Customer Input</h1>
        <form action="CartView" method="post">
            
            <div class="form-group">
                <label for="ContactName">CompanyName:</label>
                <input type="text" class="form-control" id="CompanyName" name="CompanyName" required>
            </div>
            <div class="form-group">
                <label for="Address">Address:</label>
                <input type="text" class="form-control" id="Address" name="Address" required>
            </div>
            <div class="form-group">
                <label for="Phone">Phone:</label>
                <input type="tel" class="form-control" id="Phone" name="Phone" pattern="[0-9]{10}">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Order</button>
            </div>
        </form>
    </div>

    

</div>